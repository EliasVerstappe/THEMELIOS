<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:System;assembly=mscorlib">

    <core:Double x:Key="NormalFontSize">12</core:Double>
    <core:Double x:Key="NormalControlHeight">24</core:Double>
    <Brush x:Key="ButtonDark">#41545e</Brush>

    <Style TargetType="Button" x:Key="RCL_Button">
        <Setter Property="Height" Value="{StaticResource NormalControlHeight}"/>
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
    </Style>

    <Style TargetType="GridSplitter" x:Key="RCL_GridSplitter_Horizontal">
        <Setter Property="Height" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style TargetType="GridSplitter" x:Key="RCL_GridSplitter_Vertical">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBox" x:Key="RCL_TextBox">
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
        <Setter Property="Height" Value="{StaticResource NormalControlHeight}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

